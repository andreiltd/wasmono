load("@toolchains//wasm:component.bzl", "wit_bindgen_rust", "wasm_component", "wit_library")

wit_library(
    name = "wit_resolved",
    wit = glob(["wit/**/*.wit"]),
)

wit_bindgen_rust(
    name = "service_bindings",
    world = "my:service/service",
    async_config = ["all"],
    deps = [":wit_resolved"],
    wit = [],
)

rust_binary(
    name = "service",
    crate = "service",
    crate_root = "src/lib.rs",
    srcs = ["src/lib.rs"],
    mapped_srcs = {
        ":service_bindings": "src/bindings.rs",
    },
    deps = [
        "//third-party:wit-bindgen",
    ],
    _cxx_toolchain = "toolchains//:rust_linker",
)

wasm_component(
    name = "service_component",
    module = ":service",
    wit = "wit/world.wit",
    visibility = ["PUBLIC"],
)
